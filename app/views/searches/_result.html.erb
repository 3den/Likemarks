<div class="result row">
  <div class="span10">
    <h3><%= link_to result.name, result.link, targed: "_blank" %></h3>
    <p class="link-users">
      <small>shared by:</small>
      <% result.users.limit(5).map do |user| %>
        <%= link_to user.name, user_path(user.id) %>
      <% end.join(", ") %>
    </p>
    <p><small><%= time_ago_in_words result.created_time %></small>
      <%= result.message %></p>
  </div>
  <div class="span2">
    <%= link_to image_tag(result.picture, class: "link-picture"),
      result.link %>
  </div>
</div>
