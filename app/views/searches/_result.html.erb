<div class="result row-fluid">
  <div class="span12">
    <h3><%= link_to result.name, result.link, target: "_blank" %></h3>
    <%= picture_for result.picture, class: "link-picture" %>
    <p class="link-users">
      <small>by</small>
      <%= raw link_to_users(result.users) %>
    </p>
    <p class="link-created-time">
      <small><%= time_ago_in_words result.created_time %></small>
    </p>
  </div>
</div>
